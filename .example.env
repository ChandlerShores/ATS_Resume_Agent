# ATS Resume Agent - Environment Variables Example
# Copy this file to .env and fill in your actual values

# =============================================================================
# CUSTOMER API KEYS (Required for Production)
# =============================================================================
# Format: customer_id:api_key,customer_id:api_key
# Example: pilot1:sk_live_abc123,pilot2:sk_live_xyz789
CUSTOMER_API_KEYS=pilot1:sk_live_abc123,pilot2:sk_live_xyz789

# =============================================================================
# LLM API KEYS (Required)
# =============================================================================
# OpenAI API Key for GPT models
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API Key for Claude models (optional, fallback)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# =============================================================================
# LLM CONFIGURATION (Optional - defaults provided)
# =============================================================================
# Primary LLM provider (openai or anthropic)
LLM_PROVIDER=openai

# Model names
OPENAI_MODEL=gpt-4o-mini
ANTHROPIC_MODEL=claude-3-haiku-20240307

# Temperature for LLM responses (0.0-1.0)
LLM_TEMPERATURE=0.3

# Maximum tokens for LLM responses
LLM_MAX_TOKENS=2000

# =============================================================================
# REDIS CONFIGURATION (Optional - defaults to in-memory)
# =============================================================================
# Redis URL for caching JD signals
# Leave empty to use in-memory caching
REDIS_URL=redis://localhost:6379/0

# Redis connection timeout (seconds)
REDIS_TIMEOUT=5

# =============================================================================
# COST CONTROL (Optional - defaults provided)
# =============================================================================
# Daily cost limit in USD
DAILY_COST_LIMIT=50.0

# Daily request limit
DAILY_REQUEST_LIMIT=1000

# Cost warning threshold (percentage of limit)
COST_WARNING_THRESHOLD=80

# =============================================================================
# SECURITY CONFIGURATION (Optional - defaults provided)
# =============================================================================
# Allowed CORS origins (comma-separated)
# For production, set to your frontend domains
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Request size limit (bytes)
MAX_REQUEST_SIZE=10485760

# =============================================================================
# LOGGING CONFIGURATION (Optional - defaults provided)
# =============================================================================
# Log level (DEBUG, INFO, WARN, ERROR)
LOG_LEVEL=INFO

# Log format (json or text)
LOG_FORMAT=json

# =============================================================================
# SPACY MODEL (Optional - defaults provided)
# =============================================================================
# spaCy model for local JD parsing
# Download with: python -m spacy download en_core_web_sm
SPACY_MODEL=en_core_web_sm

# =============================================================================
# DEVELOPMENT CONFIGURATION (Optional)
# =============================================================================
# Enable debug mode
DEBUG=false

# Enable development features
DEV_MODE=false

# =============================================================================
# RENDER.COM DEPLOYMENT (For Render.com deployment)
# =============================================================================
# Render.com automatically sets these, but you can override:
# PORT=8000
# HOST=0.0.0.0

# =============================================================================
# EXAMPLE VALUES FOR TESTING
# =============================================================================
# For local testing, you can use these example values:
# CUSTOMER_API_KEYS=test_customer:sk_test_123
# OPENAI_API_KEY=sk-test-key-for-local-development
# ALLOWED_ORIGINS=http://localhost:3000
# DEBUG=true
